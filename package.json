{
  "name": "ulysses",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:smarterlabs/ulysses.git",
  "author": "Kennedy Rose <kennedyianrose@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "cd packages/core && yarn build",
    "dev": "yarn run dev:sandbox",
    "dev:core": "cd packages/core && yarn dev",
    "dev:sandbox": "cd packages/sandbox && yarn dev",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "test": "yarn run build && jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@smarterlabs/babel-preset": "^1.0.8",
    "@smarterlabs/eslint-config": "^1.0.7",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.0",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4"
  }
}
